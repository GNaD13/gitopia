        {
            "name": "Generate genesis",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gitopiad",
            "args": ["generate-genesis", "/Users/faza/Downloads/export.json"],
            "cwd": "/Users/faza/Code/gitopia"
        },
        {
            "name": "Validate genesis",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gitopiad",
